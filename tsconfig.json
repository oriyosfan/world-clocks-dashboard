{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/components/ui/*"],
      "@infra/*": ["src/components/infra/*"]
    },

    "strict": true,
    // Optional properties' presence affects assignability exactly as written
    "exactOptionalPropertyTypes": true,
    // Indexing into arrays/maps yields possibly-undefined unless checked
    "noUncheckedIndexedAccess": true,
    // Require explicit override keyword when overriding class members
    "noImplicitOverride": true,
    // Disallow property access via index signature when a named property exists
    "noPropertyAccessFromIndexSignature": true,
    // Catch variables in catch blocks as unknown to force narrowing
    "useUnknownInCatchVariables": true,
    // Error on missing switch cases; ensures exhaustive checks
    "noFallthroughCasesInSwitch": true,
    // Require all code paths in a function to return
    "noImplicitReturns": true,
    // Enforce consistent file name casing in imports across OSes
    "forceConsistentCasingInFileNames": true,
    // Disallow unused local variables
    "noUnusedLocals": true,
    // Disallow unused function parameters
    "noUnusedParameters": true,

    // Developer experience optimizations
    "skipLibCheck": true,
    // Enable faster incremental type-checking in dev
    "incremental": true,
    // Persist incremental build info under .next cache
    "tsBuildInfoFile": ".next/cache/ts/tsconfig.tsbuildinfo",
    // Allow default imports from CJS modules without synthetic named export shims
    "esModuleInterop": true,
    // Treat each file as a separate module; required by Next/Vite toolchains
    "isolatedModules": true,

    // Keep import/export syntax exactly as written; do not add synthetic type-only imports
    "verbatimModuleSyntax": true,
    // Treat all files as modules unless explicitly marked otherwise
    "moduleDetection": "force",

    "plugins": [{ "name": "next" }]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "**/*.stories.tsx",
    "src/**/*.stories.tsx",
    "**/*.stories.ts",
    "src/**/*.stories.ts",
    ".storybook/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
